			description="Release with much improved functionality">
			<action dev="Shockwave Rebels" type="fix">
				Line break in change log
			</action>
			<action dev="Shockwave Rebels" type="fix">
				Size of input text field enlarged (add book)
			</action>
			<action dev="Shockwave Rebels" type="fix">
				Changed date format
				(YYYY-MM-TT, books by mail)
			</action>
			<action dev="Shockwave Rebels" type="update">
				Unique pair of books ISBN
				and title
			</action>
